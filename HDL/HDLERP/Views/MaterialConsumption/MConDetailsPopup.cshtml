@Scripts.Render("~/Scripts/HDL/MCon/MConDetailsPopup.js")

<div class="row">
    <div class="col-md-12 col-xs-12">
        @*<div class="well well-sm">CONSUMPTION DETAILS</div>*@
        <div class="bs-example">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label class="col-md-6 col-xs-6 control-label" for="cmbItem">Item:</label>
                            <div class="col-md-6">
                                <input type="text" placeholder="" style="width: 100%; height: 28px;" name="cmbItem" id="cmbItem" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-6 col-xs-6 control-label" for="txtQnty">Qnty:</label>
                            <div class="col-md-6">
                                <input type="text" style="width: 100%; height: 28px;" name="txtQnty" id="txtQnty" required validationmessage="Required"/>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-6 col-xs-6 control-label" for="txtUnit">Unit:</label>
                            <div class="col-md-6">
                                <input type="text" class="form-control" style="width: 100%; height: 28px;" name="txtUnit" id="txtUnit" required validationmessage="Required" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-6 col-xs-6 control-label" for="cmbDepartment">Department:</label>
                            <div class="col-md-6">
                                <input type="text"  style="width: 100%; height: 28px;" name="cmbDepartment" id="cmbDepartment"/>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="spacer5"></div>
    <div class="col-md-12 col-xs-12">
        <ul class="list-group ">
            <li class="list-group-item centerAlign">
                <button id="btnAddToList" class="btn btn-success" type="button"><span class="glyphicon glyphicon-floppy-disk"></span> AddToList</button>
                <button id="btnUpdateDetails" class="btn btn-success displayNone" type="button"><span class="glyphicon glyphicon-download-alt"></span> Update List</button>
                <button id="btnClearDetails" class="btn btn-info" type="button"><span class="glyphicon glyphicon-repeat"></span> Clear</button>
                <button id="btnCloseDetails" class="btn btn-danger" type="button"><span class="glyphicon glyphicon-remove"></span> Close</button>
            </li>
        </ul>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <label class="col-md-12 col-xs-12 control-label centerAlign" id="lblMessage"></label>
    </div>
</div>
