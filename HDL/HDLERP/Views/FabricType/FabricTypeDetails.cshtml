
@Scripts.Render("~/Scripts/HDL/FabricType/FabricTypeDetails.js")

<div class="row">
    <div class="col-md-12 col-xs-12">
        <div class="bs-example">
            <div class="well well-sm">Fabric Type Entry Form</div>
            <div class="col-md-6">
                <div class="form-horizontal">
                    <input type="hidden" id="hdnFabTypeCode" value="0"/>
                    <div class="form-group">
                        <label class="col-md-5 col-xs-5 control-label" for="txtTypeHead">Type Head:</label>
                        <div class="col-md-7 col-xs-7">
                            <input type="text" class="form-control" placeholder="" style="width: 100%; height: 28px;" name="txtTypeHead" id="txtTypeHead"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-5 col-xs-5 control-label" for="txtRemarks">Remarks:</label>
                        <div class="col-md-7 col-xs-7">
                            <input type="text" class="form-control" placeholder="" style="width: 100%; height: 28px;" name="txtRemarks" id="txtRemarks"/>
                        </div>
                    </div>
                    
                </div>
            </div>

            <div class="row">
                <div class="spacer5"></div>
                <div class="col-md-12 col-xs-12">
                    <ul class="list-group ">
                        <li class="list-group-item centerAlign">
                            <button id="btnSave" class="btn btn-success" type="button"><span class="glyphicon glyphicon-floppy-disk"></span> Save</button>
                            <button id="btnClear" class="btn btn-danger" type="button"><span class="glyphicon glyphicon-repeat"></span> Clear</button>
                            @*<button id="btnClose" class="btn btn-danger" type="button"><span class="glyphicon glyphicon-eject"></span> Close</button>*@
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
