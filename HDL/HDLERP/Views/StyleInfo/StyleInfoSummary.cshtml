

@Scripts.Render("~/Scripts/HDL/StyleInfo/StyleInfoSummary.js")

<div class="row">
    <div class="col-md-12 col-xs-12">
        <div class="bs-example">
            <div class="well well-sm">
                Style Summary
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="form-horizontal">
                        <div class="col-md-2 ">
                            <button id="btnAddNew" class="btn btn-primary" type="button"><span class="glyphicon glyphicon-plus-sign"></span>Add New</button>
                        </div>
                        <div class="col-md-10">
                            <div class="col-md-3">
                                <label class="col-md-4  control-label" for="txtSearchDateFrom">From:</label>
                                <div class="col-md-8 input-group">
                                    <input type="text" placeholder="Plan Date" name="inputDate" style="width: 100%; height: 28px;" id="txtSearchDateFrom">
                                </div>
                            </div>
                            <div class="col-md-3 ">
                                <label class="col-md-4  control-label" for="txtSearchDateTo">To:</label>
                                <div class="col-md-8 input-group">
                                    <input type="text" placeholder="Plan Date" name="inputDate" style="width: 100%; height: 28px;" id="txtSearchDateTo">
                                </div>
                            </div>
                            <div class="col-md-4">
                                <label class="col-md-4  control-label" for="txtSearchStyleNo">Style No/Code:</label>
                                <div class="col-md-8 input-group">
                                    <input type="text" class="form-control" placeholder="Style No" name="txtSearchStyleNo" style="width: 100%; height: 28px;" id="txtSearchStyleNo">
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="col-md-8 input-group">
                                    <button id="btnSearchStyle" class="btn btn-info" type="button"><span class="glyphicon glyphicon-search"></span>Search</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="spacer5"></div>
                <div id="grdStyleInfoSummary">
                </div>
            </div>
        </div>
    </div>
</div>

