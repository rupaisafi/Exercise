@Scripts.Render("~/Scripts/HDL/PlanningInfo/PlanningSummary.js")

<div class="row">
    <div class="col-md-12 col-xs-12">
        <div class="bs-example">
            <div class="well well-sm">
                PLANNING SHEET SUMMARY
            </div>
            <div class="panel-body">
                <div class="row" >
                    <div class="col-md-3 ">
                        <button id="btnAddNewPlanning" value="Add New" class="btn btn-sm btn-success"><span class="glyphicon glyphicon-plus"></span> Add New</button>
                    </div>
                    <div class="col-md-9" >
                        <div class="col-md-4">
                            <label class="col-md-4  control-label" for="txtSearchPlanDateFrom">From Date:</label>
                            <div class="col-md-8 input-group">
                                <input type="text" placeholder="Plan Date" name="inputDate" style="width: 100%; height: 28px;" id="txtSearchPlanDateFrom">
                            </div>
                        </div>
                        <div class="col-md-4 ">
                            <label class="col-md-4  control-label" for="txtSearchPlanDateTo">To Date:</label>
                            <div class="col-md-8 input-group">
                                <input type="text" placeholder="Plan Date" name="inputDate" style="width: 100%; height: 28px;" id="txtSearchPlanDateTo">
                            </div>
                        </div>
                        <div class="col-md-4 ">
                            <button id="btnSearchPlanning"  class="btn btn-sm btn-info"><span class="glyphicon glyphicon-search"></span></button>
                        </div>
                    </div>
                </div>
                <div class="spacer4"></div>

                <div id="grdPlanningInfoSummary">
                </div>
            </div>
            <div>
              
            </div>
        </div>
    </div>
</div>







