
@{
    ViewBag.Title = "Loom Down Time";
    Layout = "~/Views/Shared/_LayoutCustom.cshtml";
}

@Styles.Render("~/Content/HDL/loomdowntime.css")

<div>
    <div id="ldtSummary" class="row">
        <div class="col-md-12 col-xs-12">
            <div class="bs-example">
                <div class="well well-sm">
                    Loom Down Time Summary
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-3 ">
                            <button id="wsNew" class="btn btn-sm btn-primary" type="button"><span class="glyphicon glyphicon-plus-sign" style="font-size:12px;"></span> Add New</button>
                        </div>
                        <div class="col-md-9">
                            <div class="col-md-4">
                                <label class="col-md-4  control-label" for="ldtsFromDate" style="padding:5px 15px;">From Date:</label>
                                <div class="col-md-8 input-group">
                                    <input id="ldtsFromDate" style="width: 100%; height: 24px;">
                                </div>
                            </div>
                            <div class="col-md-4 ">
                                <label class="col-md-4  control-label" for="ldtsToDate" style="padding:5px 15px;">To Date:</label>
                                <div class="col-md-8 input-group">
                                    <input id="ldtsToDate" style="width: 100%; height: 24px;">
                                </div>
                            </div>
                            <div class="col-md-4 ">
                                <button id="btnSearchWeaving" class="btn btn-sm btn-primary"><span class="glyphicon glyphicon-search"></span></button>
                            </div>
                        </div>
                    </div>
                    <div class="spacer5"></div>
                    <div id="summaryGrid"></div>
                </div>
            </div>
        </div>
    </div>
    <div id="ldtDetail" class="row displayNone">
        <div class="col-md-12">
            <div class="bs-example" style="margin-bottom:0px;">
                <div class="well well-sm">Loom Down Time Record</div>
                <div class="panel-body">
                    <div class="spacer5"></div>
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-horizontal">
                                <div class="form-group">
                                    <label class="col-md-4 col-xs-4 control-label" for="ldtLDate">LoomDate</label>
                                    <div class="col-md-5 col-xs-5" style="padding-right:3px;">
                                        <input id="ldtLDate" style="width: 100%; height: 22px;" validationmessage="Required" required />
                                    </div>
                                    <div class="col-md-3 col-xs-3" style="padding-left:0px;">
                                        <input id="ldtIDNo" class="k-input k-textbox" style="width: 100%; height: 22px;" disabled="disabled" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-4 col-xs-4 control-label" for="ldtRemarks">Remarks</label>
                                    <div class="col-md-8 col-xs-8">
                                        <input id="ldtRemarks" class="k-input k-textbox" style="width: 100%; height: 22px;" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <br />
                </div>
                <div class="panel-footer" style="padding:0 5px;background:none;">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="container-fluid" style="padding:5px 0px 5px;">
                                <div id="grid"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="spacer5"></div>
            <ul class="list-group ">
                <li class="list-group-item centerAlign">
                    <button class="btn btn-info" type="button"><span class="glyphicon glyphicon-repeat"></span> New</button>
                    <button id="ipdClose" class="btn btn-danger" type="button"><span class="glyphicon glyphicon-remove"></span> Close</button>
                </li>
            </ul>
        </div>
    </div>
</div>

@section scripts{
    @Scripts.Render("~/Scripts/HDL/LoomDownTime/Index.js")
}