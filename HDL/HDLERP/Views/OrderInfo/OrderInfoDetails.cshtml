@Scripts.Render("~/Scripts/HDL/OrderInfo/OrderInfoDetails.js")
@Scripts.Render("~/Scripts/HDL/OrderInfo/OrderDetailsSummary.js")

<div class="row">
    <div class="col-md-12 col-xs-12">
        <div class="well well-sm">Order Information</div>
        <div class="bs-example" id="divOrderDetails">

            <div class="col-md-4">
                <div class="form-horizontal">
                    <input type="hidden" id="hdnOrderId" value="0" />
                    <div class="form-group">
                        <label class="col-md-5 col-xs-5 control-label" for="txtOrderDate">Order Date:</label>
                        <div class="col-md-7 col-xs-7">
                            <input type="text" placeholder="" style="width: 100%; height: 28px;" name="txtOrderDate" id="txtOrderDate" required validationmessage="Required" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-5 col-xs-5 control-label" for="txtOrderNo">Order No:</label>
                        <div class="col-md-4 col-xs-4">
                            <input type="text" class="form-control" placeholder="" style="width: 100%; height: 28px;" name="txtOrderNo" id="txtOrderNo" required validationmessage="Required" readonly="readonly"/>
                        </div>
                        <button id="btnGenerateOrderNo" class="col-md-2 btn btn-danger" type="button">Generate</button>
                      
                    </div>

                </div>
            </div>
            <div class="col-md-4">
                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="col-md-5 col-xs-5 control-label" for="cmbBuyer">Buyer:</label>
                        <div class="col-md-7 col-xs-7">
                            <input type="text" name="cmbBuyer" style="width: 100%; height: 28px;" id="cmbBuyer" required validationmessage="Required">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-5 col-xs-5 control-label" for="cmbCustomer">Customer:</label>
                        <div class="col-md-7 col-xs-7">
                            <input type="text" name="cmbCustomer" style="width: 100%; height: 28px;" id="cmbCustomer" required validationmessage="Required">
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="col-md-5 col-xs-5 control-label" for="cmbMktPerson">Marketing Person:</label>
                        <div class="col-md-7 col-xs-7">
                            <input type="text" name="cmbMktPerson" style="width: 100%; height: 28px;" id="cmbMktPerson" required validationmessage="Required">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-5 col-xs-5 control-label" for="txtRemarks">Remarks:</label>
                        <div class="col-md-7 col-xs-7">
                            <input type="text" class="form-control" name="txtRemarks" style="width: 100%; height: 28px;" id="txtRemarks">
                        </div>
                    </div>


                </div>
            </div>
            @*<div class="col-md-3">
                <div class="form-horizontal">
                    <div class="form-group">
                            <label class="col-md-5 col-xs-5 control-label" for="cmbOrderType">Order Type:</label>
                            <div class="col-md-7 col-xs-7">
                                <input type="text"  name="cmbOrderType" style="width: 100%; height: 28px;" id="cmbOrderType" >
                            </div>
                        </div>
                    <div class="form-group">
                            <label class="col-md-5 col-xs-5 control-label" for="cmbOrderStatus">Status:</label>
                            <div class="col-md-7 col-xs-7">
                                <input type="text" name="cmbOrderStatus" style="width: 100%; height: 28px;" id="cmbOrderStatus">
                            </div>
                        </div>

                </div>
            </div>*@

            <div class="row">
                <div class="col-md-12 col-xs-12">
                    <div class="panel-body">
                        <button id="btnAddOrderDetails" class="btn btn-primary" type="button">Add Details</button>
                        <div id="grdOrderDetailsSummary">
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="spacer5"></div>
                <div class="col-md-12 col-xs-12">
                    <ul class="list-group ">
                        <li class="list-group-item centerAlign">
                            <button id="btnSave" class="btn btn-success" type="button"><span class="glyphicon glyphicon-floppy-disk"></span> Save</button>
                            <button id="btnClear" class="btn btn-info" type="button"><span class="glyphicon glyphicon-repeat"></span> Clear</button>
                            <button id="btnClose" class="btn btn-danger" type="button"><span class="glyphicon glyphicon-remove"></span> Close</button>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

    </div>
</div>



