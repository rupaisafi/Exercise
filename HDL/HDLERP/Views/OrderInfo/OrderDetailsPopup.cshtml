@Scripts.Render("~/Scripts/HDL/OrderInfo/OrderDetailsPopup.js")

<div class="row">
    <div class="col-md-12 col-xs-12">
        @*<div class="well well-sm">ORDER DETAILS INFORMATION</div>*@
        <div class="bs-example">
            <div class="row">
                <div class="col-md-3 col-xs-3">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label class="col-md-6 col-xs-6 control-label" for="cmbStyle">Style No:</label>
                            <div class="col-md-6">
                                <input type="text" placeholder="" style="width: 100%; height: 28px;" name="cmbStyle" id="cmbStyle" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-6 col-xs-6 control-label" for="txtOrderQty">Qnty:</label>
                            <div class="col-md-6">
                                <input type="text"  style="width: 100%; height: 28px;" name="txtOrderQty" id="txtOrderQty" required validationmessage="Required" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-6 col-xs-6 control-label" for="txtOrderRate">Rate:</label>
                            <div class="col-md-6">
                                <input type="text" style="width: 100%; height: 28px;" name="txtOrderRate" id="txtOrderRate" required validationmessage="Required" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-6 col-xs-6 control-label" for="txtOrderAmt">Amount:</label>
                            <div class="col-md-6">
                                <input type="text"  style="width: 100%; height: 28px;" name="txtOrderAmt" id="txtOrderAmt" readonly="readonly"/>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-6 col-xs-6 control-label" for="cmbProdOrderType">Prod Order Type:</label>
                            <div class="col-md-6">
                                <input type="text"  style="width: 100%; height: 28px;" name="cmbProdOrderType" id="cmbProdOrderType" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-6 col-xs-6 control-label" for="cmbSaleOrderType">Sales Order Type:</label>
                            <div class="col-md-6">
                                <input type="text" style="width: 100%; height: 28px;" name="cmbSaleOrderType" id="cmbSaleOrderType" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 col-xs-3">
                    <div class="form-horizontal">
                       
                        <div class="form-group">
                            <label class="col-md-6 col-xs-6 control-label" for="txtWeave">Weave:</label>
                            <div class="col-md-6">
                                <input type="text" class="form-control" style="width: 100%; height: 28px;" name="txtWeave" id="txtWeave" readonly="readonly" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-6 col-xs-6 control-label" for="txtWidth">Width:</label>
                            <div class="col-md-6">
                                <input type="text" class="form-control" style="width: 100%; height: 28px;" name="txtWidth" id="txtWidth" readonly="readonly"/>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-6 col-xs-6 control-label" for="txtConstruction">Construction:</label>
                            <div class="col-md-6 col-xs-6">
                                <input type="text" class="form-control" style="width: 100%; height: 28px;" name="txtConstruction" id="txtConstruction" readonly="readonly" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-6 col-xs-6 control-label" for="txtWarpRatio">Warp Ratio:</label>
                            <div class="col-md-6 col-xs-6">
                                <input type="text" class="form-control" style="width: 100%; height: 28px;" name="txtWarpRatio" id="txtWarpRatio" readonly="readonly" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-6 col-xs-6 control-label" for="txtWeftRatio">Weft Ratio:</label>
                            <div class="col-md-6 col-xs-6">
                                <input type="text" class="form-control" style="width: 100%; height: 28px;" name="txtWeftRatio" id="txtWeftRatio" readonly="readonly" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-6 col-xs-6 control-label" for="cmbColor">Color:</label>
                            <div class="col-md-6">
                                <input type="text" style="width: 100%; height: 28px;" name="cmbColor" id="cmbColor" readonly="readonly" disabled="disabled" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 col-xs-3">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label class="col-md-6 control-label" for="txtTEnd">T End:</label>
                            <div class="col-md-6">
                                <input type="text" style="width: 100%; height: 28px;" name="txtTEnd" id="txtTEnd" readonly="readonly" disabled="disabled"/>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-6 col-xs-6 control-label" for="cmbMachineName">MC Name:</label>
                            <div class="col-md-6 col-xs-6">
                                <input type="text" style="width: 100%; height: 28px;" name="cmbMachineName" id="cmbMachineName" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-6 col-xs-6 control-label" for="txtDyeProd">Dye Prod:</label>
                            <div class="col-md-6 col-xs-6">
                                <input type="text" style="width: 100%; height: 28px;" name="txtDyeProd" id="txtDyeProd" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-6 col-xs-6 control-label" for="cmbProdStatus">Prod Status:</label>
                            <div class="col-md-6 col-xs-6">
                                <input type="text" style="width: 100%; height: 28px;" name="cmbProdStatus" id="cmbProdStatus" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-6 col-xs-6 control-label" for="cmbOrderStatus">Order Status:</label>
                            <div class="col-md-6 col-xs-6">
                                <input type="text" style="width: 100%; height: 28px;" name="cmbOrderStatus" id="cmbOrderStatus" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-6 col-xs-6 control-label" for="cmbMktStatus">Mkt Status:</label>
                            <div class="col-md-6 col-xs-6">
                                <input type="text" style="width: 100%; height: 28px;" name="cmbMktStatus" id="cmbMktStatus" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 col-xs-3">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label class="col-md-6 col-xs-6 control-label" for="cmbPrcStutus">Prc Status:</label>
                            <div class="col-md-6 col-xs-6">
                                <input type="text" style="width: 100%; height: 28px;" name="cmbPrcStutus" id="cmbPrcStutus"/>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-6 col-xs-6 control-label" for="txtReqQnty">Req Qnty:</label>
                            <div class="col-md-6 col-xs-6">
                                <input type="text" style="width: 100%; height: 28px;" name="txtReqQnty" id="txtReqQnty"/>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-6 col-xs-6 control-label" for="txtRemarks2">Remarks:</label>
                            <div class="col-md-6 col-xs-6">
                                <input type="text" class="form-control" style="width: 100%; height: 28px;" name="txtRemarks2" id="txtRemarks2"/>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-6 col-xs-6 control-label" for="txtCompleteDate">Complete Date:</label>
                            <div class="col-md-6 col-xs-6">
                                <input type="text" style="width: 100%; height: 28px;" name="txtCompleteDate" id="txtCompleteDate" />
                            </div>
                        </div>
                    </div>

                </div>

            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="spacer5"></div>
    <div class="col-md-12 col-xs-12">
        <ul class="list-group ">
            <li class="list-group-item centerAlign">
                <button id="btnAddToList" class="btn btn-success" type="button"><span class="glyphicon glyphicon-floppy-disk"></span> AddToList</button>
                <button id="btnUpdateODetails" class="btn btn-success displayNone" type="button"><span class="glyphicon glyphicon-download-alt"></span> Update List</button>
                <button id="btnClearODetails" class="btn btn-info" type="button"><span class="glyphicon glyphicon-repeat"></span> Clear</button>
                <button id="btnCloseODetails" class="btn btn-danger" type="button"><span class="glyphicon glyphicon-remove"></span> Close</button>
            </li>
        </ul>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <label class="col-md-12 col-xs-12 control-label centerAlign" id="lblMessage"></label>
    </div>
</div>
