
@Scripts.Render("~/Scripts/HRM/EmployeeSeparetion/EmployeeSeparation.js")

<div class="col-md-12 bs-example">
    <div class="well well-sm">
        Employee Separation
    </div>
    <input type="hidden" id="hdnEmpID" value="0" />
    <div class="col-md-12">
        <div class="row">
            <div class="form-horizontal">
                <div class="form-group">
                    <label class="col-md-3 control-label" for="cmbEmployeeStatus">Type:</label>
                    <div class="col-md-9">
                        <input type="text" style="width: 100%; height: 28px;" name="cmbEmployeeStatus" id="cmbEmployeeStatus" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3  control-label" for="txtSubDate">Submission Date:</label>
                    <div class="col-md-9 ">
                        <input type="text" style="width: 100%; height: 28px;" id="txtSubDate">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3  control-label" for="txtEffectDate">Effect Date:</label>
                    <div class="col-md-9 ">
                        <input type="text" style="width: 100%; height: 28px;" id="txtEffectDate" required validationmessage="Required">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label" for="txtNoticePeriod">Notice Period:</label>
                    <div class="col-md-4 ">
                        <input type="number" style="width: 100%; height: 28px;" id="txtNoticePeriod" class="k-textbox">
                    </div>
                    <label class="col-md-2 control-label" for="ckhWaive">Waive:</label>
                    <div class="col-md-3">
                        <input type="checkbox" id="ckhWaive" class="k-checkbox">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3  control-label" for="txtRemarks">Comments:</label>
                    <div class="col-md-9 ">
                        <textarea name="txtRemarks" style="width: 100%; resize: none;" id="txtRemarks" rows="10" class="k-textbox" placeholder="Comments"></textarea>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="spacer5"></div>
            <ul class="list-group ">
                <li class="list-group-item centerAlign">
                    <button id="btnSave" class="btn btn-primary" type="button">Save</button>
                    <button id="btnClear" class="btn btn-primary" type="button">Clear</button>
                </li>
            </ul>
        </div>
    </div>
</div>