
@Scripts.Render("~/Scripts/HRM/Designation/DesignationDetails.js")

<div class="row">
    <div class="col-md-12 col-xs-12">
        <div class="bs-example" id="divDesignationDetails">
            <div class="well well-sm">Designation Details</div>
            <div class="form-horizontal">
                <input type="hidden" id="hdnDesignationID" value="0" />
                <div class="form-group">
                    <label class="col-md-3 col-xs-3 control-label" for="txtDesignationName">Designation Name:</label>
                    <div class="col-md-7 col-xs-7">
                        <input type="text" class="form-control" placeholder="" style="width: 100%; height: 28px;" name="txtDesignationName" id="txtDesignationName" required validationmessage="Required" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 col-xs-3 control-label" for="txtDesignationName">Designation Name Ban:</label>
                    <div class="col-md-7 col-xs-7">
                        <input type="text" class="form-control" placeholder="" style="width: 100%; height: 28px;" name="txtDesignationNameBan" id="txtDesignationNameBan"/>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 col-xs-3 control-label" for="cmbGroup">Group:</label>
                    <div class="col-md-7 col-xs-7">
                        <input type="text" style="width: 100%; height: 28px;" name="cmbGroup" id="cmbGroup" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 col-xs-3 control-label" for="txtGrade">Grade:</label>
                    <div class="col-md-7 col-xs-7">
                        <input type="number" class="form-control" placeholder="" style="width: 100%; height: 28px;" name="txtGrade" id="txtGrade" required validationmessage="Required" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 col-xs-3 control-label" for="txtOrderBy">Order By:</label>
                    <div class="col-md-7 col-xs-7">
                        <input type="number" class="form-control" placeholder="" style="width: 100%; height: 28px;" name="txtOrderBy" id="txtOrderBy" required validationmessage="Required" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 col-xs-3 control-label" for="chkIsActive">Is Active:</label>
                    <div class="col-md-7 col-xs-7">
                        <input id="chkIsActive" type="checkbox" value="IsActive"/>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 col-xs-3 control-label" for="chkIsDelete">Is Delete:</label>
                    <div class="col-md-7 col-xs-7">
                        <input id="chkIsDelete" type="checkbox" value="IsDelete" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="spacer5"></div>
                <div class="col-md-12 col-xs-12">
                    <ul class="list-group ">
                        <li class="list-group-item centerAlign">
                            <button id="btnSave" class="btn btn-success" type="button"><span class="glyphicon glyphicon-floppy-disk"></span> Save</button>
                            <button id="btnClear" class="btn btn-danger" type="button"><span class="glyphicon glyphicon-repeat"></span> Clear</button>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>


