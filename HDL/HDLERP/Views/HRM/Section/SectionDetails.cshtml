@Scripts.Render("~/Scripts/HRM/Section/SectionDetails.js")

<div class="row">
    <div class="col-md-12 col-xs-12">
        <div  id="divSectionDetails">
            <div class="well well-sm">Section Details</div>
            <div class="form-horizontal">
                <input type="hidden" id="hdnSectionId" value="0" />
                <div class="form-group">
                    <label class="col-md-3 col-xs-3 control-label" for="txtSectionName">Section Name:</label>
                    <div class="col-md-7 col-xs-7">
                        <input type="text" class="k-textbox" style="width: 100%; height: 28px;" placeholder="" name="txtSectionName" id="txtSectionName" required validationmessage="Required" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 col-xs-3 control-label" for="txtSectionNameBan">Section Name Ban:</label>
                    <div class="col-md-7 col-xs-7">
                        <input type="text" class="k-textbox" style="width: 100%; height: 28px;" placeholder="" name="txtSectionNameBan" id="txtSectionNameBan" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 col-xs-3 control-label" for="txtEmail">Activity:</label>
                    <div class="col-md-7 col-xs-7">
                        <input id="chkInActive" type="checkbox" value="InActive" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="spacer5"></div>
                <div class="col-md-12 col-xs-12">
                    <ul class="list-group ">
                        <li class="list-group-item centerAlign">
                            <button id="btnSave" class="btn btn-success" type="button"><span class="glyphicon glyphicon-floppy-disk"></span> Save</button>
                            <button id="btnClear" class="btn btn-danger" type="button"><span class="glyphicon glyphicon-repeat"></span> Clear</button>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>


