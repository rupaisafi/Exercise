
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutCustom.cshtml";
}
<link href="~/Content/HDL/BeamStock.css" rel="stylesheet" />
<div class="divWraper" id="divWraper">
    <div class="divSummaryWraper">
        <div class="bs-example">
            <div class="well well-sm">
                BeamStock Summary
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-3 ">
                        <button class="btn btn-primary btn-add-summary" type="button" id="ssNew"><span class="glyphicon glyphicon-plus-sign"></span> Add New</button>
                    </div>
                    <div class="col-md-9">
                        <div class="col-md-4">
                            <label class="col-md-4  control-label" for="fromDate">From Date:</label>
                            <div class="col-md-8 input-group">
                                <input id="fromDate" placeholder="From Date" style="width: 100%; height: 24px;">
                            </div>
                        </div>
                        <div class="col-md-4 ">
                            <label class="col-md-4  control-label" for="toDate">To Date:</label>
                            <div class="col-md-8 input-group">
                                <input id="toDate" placeholder="To Date" style="width: 100%; height: 24px;">
                            </div>
                        </div>
                        <div class="col-md-4 ">
                            <button id="btnSearchWarping" class="btn btn-sm btn-info" style="height: 26px;"><span class="glyphicon glyphicon-search"></span></button>
                        </div>
                    </div>
                </div>
                <div class="spacer4"></div>
                <div id="summaryGrid"></div>

            </div>
        </div>
    </div>
    <div class="divDetailWraper displayNone">
        <div class="bs-example">
            <div class="well well-sm" style="margin-bottom: 0px !important;">
                Beam Stock Entry Form
            </div>
            <div style="border-bottom:1px solid #286893;background-color: #99ccff;">
                <div class="clearfix"></div>
                <br />
                <div class="col-md-3">
                    <div class="form-horizontal">
                        <div class="form-group" style="margin-bottom:2px;">
                            <label class="col-md-4 col-xs-4 control-label" for="bsdBDate">Stock Date:</label>
                            <div class="col-md-5 col-xs-5" style="padding-right:3px;">
                                <input id="bsdBDate" style="width: 100%; height: 24px;" required validationmessage="Required" />
                            </div>
                            <div class="col-md-3 col-xs-3" style="padding-left:0px;">
                                <input id="bsdID" class="k-input k-textbox" style="width: 100%; height: 24px;" disabled="disabled" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-4 col-xs-4 control-label" for="bsdDName">Dept:</label>
                            <div class="col-md-6 col-xs-5" style="padding-right:3px;">
                                <input id="bsdDName" style="width: 100%; height: 22px;" required validationmessage="Required" />
                            </div>
                            <div class="col-md-2 col-xs-3" style="padding-left:0px;">
                                <input id="bsdDCode" class="k-input k-textbox" style="width: 100%; height: 24px;" disabled="disabled" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label class="col-md-4 col-xs-4 control-label" for="bsdUName">Unit:</label>
                            <div class="col-md-6 col-xs-5" style="padding-right:3px;">
                                <input id="bsdUName" style="width: 100%; height: 22px;" required validationmessage="Required" />
                            </div>
                            <div class="col-md-2 col-xs-3" style="padding-left:0px;">
                                <input id="bsdUCode" class="k-input k-textbox" style="width: 100%; height: 24px;" disabled="disabled" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-4 col-xs-4 control-label" for="bsdRemarks">Remarks:</label>
                            <div class="col-md-8 col-xs-8 clearfix">
                                <input id="bsdRemarks" class="k-input k-textbox" style="width: 100%; height: 22px;" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                </div>
                <div class="col-md-3">
                </div>
                <div class="clearfix"></div>
                <br />
            </div>

            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12">
                        <div id="bsDetailGrid"></div>
                    </div>
                </div>
                <div class="spacer5"></div>
                <div class="row">
                    <div class="col-md-12 col-xs-12">
                        <ul class="list-group">
                            <li class="list-group-item centerAlign">
                                <button class="btn btn-success btn-data-entry-save" type="button" ng-click="detail.save()"><span class="glyphicon glyphicon-floppy-disk"></span> Save</button>
                                <button class="btn btn-info btn-data-entry-clear" type="button" ng-click="detail.clear()"><span class="glyphicon glyphicon-repeat"></span> New</button>
                                <button class="btn btn-danger btn-data-entry-close" type="button" id="bsdClose"><span class="glyphicon glyphicon-remove"></span> Close</button>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/Scripts/HDL/BeamStock/Index.js"></script>
} 