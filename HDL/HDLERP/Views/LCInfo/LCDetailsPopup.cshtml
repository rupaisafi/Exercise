@Scripts.Render("~/Scripts/HDL/LcInfo/LcDetailsPopup.js")
<div class="row">
    <div class="col-md-12 col-xs-12">
        <div class="bs-example">
            <div class="row">
                <div class="col-md-12 col-xs-12">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label class="col-md-3 col-xs-3 control-label" for="cmbItem">Item Name:</label>
                            <div class="col-md-6">
                                <input type="text" placeholder="" style="width: 100%; height: 28px;" name="cmbItem" id="cmbItem" required validationmessage="Required"  />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 col-xs-3 control-label" for="txtLcQty">Qnty:</label>
                            <div class="col-md-6">
                                <input type="text" style="width: 100%; height: 28px;" name="txtLcQty" id="txtLcQty" required validationmessage="Required" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 col-xs-3 control-label" for="txtLcRate">Rate ($):</label>
                            <div class="col-md-6">
                                <input type="text"  style="width: 100%; height: 28px;" name="txtLcRate" id="txtLcRate" required validationmessage="Required" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 col-xs-3 control-label" for="txtLcAmt">Amount ($):</label>
                            <div class="col-md-6">
                                <input type="text"  style="width: 100%; height: 28px;" name="txtLcAmt" id="txtLcAmt" readonly="readonly"/>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 col-xs-3 control-label" for="cmbCurrency">Currency:</label>
                            <div class="col-md-6">
                                <input type="text" style="width: 100%; height: 28px;" name="cmbCurrency" id="cmbCurrency" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 col-xs-3 control-label" for="txtConvRate">Conversion Rate:</label>
                            <div class="col-md-6">
                                <input type="text" style="width: 100%; height: 28px;" name="txtConvRate" id="txtConvRate" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 col-xs-3 control-label" for="txtValueTaka">Value (Taka):</label>
                            <div class="col-md-6">
                                <input type="text"  style="width: 100%; height: 28px;" name="txtValueTaka" id="txtValueTaka" readonly="readonly" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 col-xs-3 control-label" for="txtYarnCode">Yarn Code:</label>
                            <div class="col-md-6">
                                <input type="text" class="form-control" style="width: 100%; height: 28px;" name="txtYarnCode" id="txtYarnCode" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 col-xs-3 control-label" for="cmbGroupName">Group Code:</label>
                            <div class="col-md-6 col-xs-6">
                                <input type="text" style="width: 100%; height: 28px;" name="cmbGroupName" id="cmbGroupName"  />
                            </div>
                        </div>
                     
                    </div>
                </div>
            
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="spacer5"></div>
    <div class="col-md-12 col-xs-12">
        <ul class="list-group ">
            <li class="list-group-item centerAlign">
                <button id="btnAddToList" class="btn btn-success" type="button"><span class="glyphicon glyphicon-floppy-disk"></span> AddToList</button>
                <button id="btnUpdateLcDetails" class="btn btn-success displayNone" type="button"><span class="glyphicon glyphicon-download-alt"></span> Update List</button>
                <button id="btnClearLcDetails" class="btn btn-info" type="button"><span class="glyphicon glyphicon-repeat"></span> Clear</button>
                <button id="btnCloseLcDetails" class="btn btn-danger" type="button"><span class="glyphicon glyphicon-remove"></span> Close</button>
            </li>
        </ul>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <label class="col-md-12 col-xs-12 control-label centerAlign" id="lblMessage"></label>
    </div>
</div>

