<div class="row">
    <div class="col-md-12 col-xs-12">
        <div class="well well-sm">LC Information</div>
        <div class="bs-example" id="divLcDetails">

            <div class="col-md-3">
                <div class="form-horizontal">
                    <input type="hidden" id="hdnLcId" value="0" />
                    <div class="form-group">
                        <label class="col-md-5 col-xs-5 control-label" for="txtLcDate">Lc Date:</label>
                        <div class="col-md-7 col-xs-7">
                            <input type="text" placeholder="" style="width: 100%; height: 28px;" name="txtLcDate" id="txtLcDate" required validationmessage="Required" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-5 col-xs-5 control-label" for="txtLcNo">Lc No:</label>
                        <div class="col-md-7 col-xs-7">
                            <input type="text" class="form-control" placeholder="" style="width: 100%; height: 28px;" name="txtLcNo" id="txtLcNo" required validationmessage="Required" />
                        </div>
                        @*<button id="btnGenerateLcNo" class="col-md-2 btn btn-sm btn-danger" style="width: auto !important" type="button">Get</button>*@
                    </div>
                    <div class="form-group">
                        <label class="col-md-5 col-xs-5 control-label" for="cmbSupplier">Supplier Name:</label>
                        <div class="col-md-7 col-xs-7">
                            <input type="text" name="cmbSupplier" style="width: 100%; height: 28px;" id="cmbSupplier" required validationmessage="Required">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-5 col-xs-5 control-label" for="cmbBank">Bank Name:</label>
                        <div class="col-md-7 col-xs-7">
                            <input type="text" name="cmbBank" style="width: 100%; height: 28px;" id="cmbBank" required validationmessage="Required">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-5 col-xs-5 control-label" for="cmbBranch">Branch Name:</label>
                        <div class="col-md-7 col-xs-7">
                            <input type="text" name="cmbBranch" style="width: 100%; height: 28px;" id="cmbBranch" required validationmessage="Required">
                        </div>
                    </div>

                </div>
            </div>
            <div class="col-md-3">
                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="col-md-5 col-xs-5 control-label" for="txtExpDate">Exp. Date:</label>
                        <div class="col-md-7 col-xs-7">
                            <input type="text" name="txtExpDate" style="width: 100%; height: 28px;" id="txtExpDate" >
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-5 col-xs-5 control-label" for="txtShipDate">Ship Date:</label>
                        <div class="col-md-7 col-xs-7">
                            <input type="text" name="txtShipDate" style="width: 100%; height: 28px;" id="txtShipDate" >
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-5 col-xs-5 control-label" for="txtSdExtDate">S.D.Ext:</label>
                        <div class="col-md-7 col-xs-7">
                            <input type="text" name="txtSdExtDate" style="width: 100%; height: 28px;" id="txtSdExtDate">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-5 col-xs-5 control-label" for="txtPiNo">P.I.No:</label>
                        <div class="col-md-7 col-xs-7">
                            <input type="text" class="form-control" name="txtPiNo" style="width: 100%; height: 28px;" id="txtPiNo">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-5 col-xs-5 control-label" for="txtPIDate">P.I.Date:</label>
                        <div class="col-md-7 col-xs-7">
                            <input type="text" name="txtPIDate" style="width: 100%; height: 28px;" id="txtPIDate">
                        </div>
                    </div>
                   
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="col-md-5 col-xs-5 control-label" for="txtInvNo">Invoice No:</label>
                        <div class="col-md-7 col-xs-7">
                            <input type="text" class="form-control" name="txtInvNo" style="width: 100%; height: 28px;" id="txtInvNo" required validationmessage="Required">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-5 col-xs-5 control-label" for="txtInvDate">Invoice Date:</label>
                        <div class="col-md-7 col-xs-7">
                            <input type="text" name="txtInvDate" style="width: 100%; height: 28px;" id="txtInvDate" required validationmessage="Required">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-5 col-xs-5 control-label" for="txtIpNo">I.P.No:</label>
                        <div class="col-md-7 col-xs-7">
                            <input type="text" class="form-control" name="txtIpNo" style="width: 100%; height: 28px;" id="txtIpNo">
