
@Scripts.Render("~/Scripts/HDL/ColorInfo/ColorDetails.js")
<div class="row">
    <div class="col-md-12 col-xs-12">
        <div class="well well-sm">Color Details</div>
        <div class="bs-example" id="divColorDetails">

            <div class="form-horizontal">
                <input type="hidden" id="hdnColorId" value="0"/>
                <div class="form-group">
                    <label class="col-md-3 col-xs-3 control-label" for="txtColorName">Color Name:</label>
                    <div class="col-md-7 col-xs-7">
                        <input type="text" class="form-control" placeholder="" Style="width: 100%; height: 28px;" name="txtColorName" id="txtColorName" required validationmessage="Required"/>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 col-xs-3 control-label" for="txtColorCode">Color Code:</label>
                    <div class="col-md-7 col-xs-7">
                        <input type="text" class="form-control" placeholder="" Style="width: 100%; height: 28px;" name="txtColorCode" id="txtColorCode"/>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="spacer5"></div>
                <div class="col-md-12 col-xs-12">
                    <ul class="list-group ">
                        <li class="list-group-item centerAlign">
                            <button id="btnSave" class="btn btn-success" type="button"><span class="glyphicon glyphicon-floppy-disk"></span> Save</button>
                            <button id="btnClear" class="btn btn-danger" type="button"><span class="glyphicon glyphicon-repeat"></span> Clear</button>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>





