
@Scripts.Render("~/Scripts/HDL/ProdQuality/ProdQualityDetails.js")

<div class="row">
    <div class="col-md-12 col-xs-12">
        <div class="bs-example">
            <div class="well well-sm">Production Quality Entry Form</div>
            <div class="col-md-8">
                <div class="form-horizontal">
                    <input type="hidden" id="hdnQID" value="0"/>
                    <div class="form-group">
                        <label class="col-md-5 col-xs-5 control-label" for="txtQCode">Quality Code:</label>
                        <div class="col-md-7 col-xs-7">
                            <input type="text" placeholder="" style="width: 100%; height: 28px;" name="txtQCode" id="txtQCode"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-5 col-xs-5 control-label" for="txtQName">Quality Name:</label>
                        <div class="col-md-7 col-xs-7">
                            <input type="text" class="form-control" placeholder="" style="width: 100%; height: 28px;" name="txtQName" id="txtQName"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-5 col-xs-5 control-label" for="txtRemarks">Remarks:</label>
                        <div class="col-md-7 col-xs-7">
                            <input type="text" class="form-control" placeholder="" style="width: 100%; height: 28px;" name="txtRemarks" id="txtRemarks" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-5 col-xs-5 control-label" for="txtRate">Rate:</label>
                        <div class="col-md-7 col-xs-7">
                            <input type="text" placeholder="" style="width: 100%; height: 28px;" name="txtRate" id="txtRate"/>
                        </div>
                    </div>
                    
                </div>
            </div>

            <div class="row">
                <div class="spacer5"></div>
                <div class="col-md-12 col-xs-12">
                    <ul class="list-group ">
                        <li class="list-group-item centerAlign">
                            <button id="btnSave" class="btn btn-success" type="button"><span class="glyphicon glyphicon-floppy-disk"></span> Save</button>
                            <button id="btnClear" class="btn btn-danger" type="button"><span class="glyphicon glyphicon-repeat"></span> Clear</button>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
