@Scripts.Render("~/Scripts/HDL/MrrInfo/MrrDetailsPopup.js")
@Scripts.Render("~/Scripts/HDL/MrrInfo/MrrBalanceSummary.js")

<div class="row">
    <div class="col-md-12 col-xs-12" id="mrrDetailsWindow">
        <div class="bs-example">
            <div class="row">
                <div class="col-md-12">
                    <div id="grdMrrBalanceSummary"></div>
                </div>
            </div>
            <hr/>
            <div class="row">
                <div class="col-md-4 col-xs-4">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label class="col-md-5 col-xs-5 control-label" for="cmbItem">Item Name:</label>
                            <div class="col-md-6">
                                <input type="text" placeholder="" style="width: 100%; height: 28px;" name="cmbItem" id="cmbItem" required validationmessage="Required"/>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-5 col-xs-5 control-label" for="txtUnit">Unit:</label>
                            <div class="col-md-6">
                                <input type="text" class="form-control" style="width: 100%; height: 28px;" name="txtUnit" id="txtUnit"/>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-5 col-xs-5 control-label" for="cmbYarn">Yarn Code:</label>
                            <div class="col-md-6">
                                <input type="text" style="width: 100%; height: 28px;" name="cmbYarn" id="cmbYarn" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-5 col-xs-5 control-label" for="txtMrrQty">Qnty:</label>
                            <div class="col-md-6">
                                <input type="text" style="width: 100%; height: 28px;" name="txtMrrQty" id="txtMrrQty" required validationmessage="Required"/>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-5 col-xs-5 control-label" for="txtMrrRate">Rate ($):</label>
                            <div class="col-md-6">
                                <input type="text" style="width: 100%; height: 28px;" name="txtMrrRate" id="txtMrrRate" required validationmessage="Required"/>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-5 col-xs-5 control-label" for="txtMrrAmt">Value ($):</label>
                            <div class="col-md-6">
                                <input type="text" style="width: 100%; height: 28px;" name="txtMrrAmt" id="txtMrrAmt" readonly="readonly"/>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-5 col-xs-5 control-label" for="txtLcCostPer">LC Cost(%):</label>
                            <div class="col-md-6">
                                <input type="text" style="width: 100%; height: 28px;" name="txtLcCostPer" id="txtLcCostPer"/>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-5 col-xs-5 control-label" for="txtWithLcCostRate">With LC Cost Rate:</label>
                            <div class="col-md-6">
                                <input type="text" style="width: 100%; height: 28px;" name="txtWithLcCostRate" id="txtWithLcCostRate" required validationmessage="Required"/>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-5 col-xs-5 control-label" for="txtWithLcCostValue">With LC Cost Value:</label>
                            <div class="col-md-6">
                                <input type="text" style="width: 100%; height: 28px;" name="txtWithLcCostValue" id="txtWithLcCostValue" readonly="readonly"/>
                            </div>
                        </div>

                    </div>
                </div>
                <div class="col-md-4 col-xs-4">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label class="col-md-5 col-xs-5 control-label" for="cmbCurrency">Currency:</label>
                            <div class="col-md-6">
                                <input type="text" style="width: 100%; height: 28px;" name="cmbCurrency" id="cmbCurrency" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-5 col-xs-5 control-label" for="txtConvRate">Conversion Rate:</label>
                            <div class="col-md-6">
                                <input type="text" style="width: 100%; height: 28px;" name="txtConvRate" id="txtConvRate"/>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-5 col-xs-5 control-label" for="txtValueTaka">Value (Taka):</label>
                            <div class="col-md-6">
                                <input type="text" style="width: 100%; height: 28px;" name="txtValueTaka" id="txtValueTaka" readonly="readonly"/>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-5 col-xs-5 control-label" for="txtLotNo">Fac.Lot No:</label>
                            <div class="col-md-6">
                                <input type="text" class="form-control" style="width: 100%; height: 28px;" name="txtLotNo" id="txtLotNo"/>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-5 col-xs-5 control-label" for="txtConPerLength">Cone Per Lenght:</label>
                            <div class="col-md-6">
                                <input type="text" style="width: 100%; height: 28px;" name="txtConPerLength" id="txtConPerLength"/>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-5 col-xs-5 control-label" for="txtConPerBag">Cone Per Bag:</label>
                            <div class="col-md-6">
                                <input type="text" style="width: 100%; height: 28px;" name="txtConPerBag" id="txtConPerBag" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-5 col-xs-5 control-label" for="txtMfdDate">Mfd Date:</label>
                            <div class="col-md-6">
                                <input type="text" style="width: 100%; height: 28px;" name="txtMfdDate" id="txtMfdDate"/>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-5 col-xs-5 control-label" for="txtExpDate">Exp Date:</label>
                            <div class="col-md-6">
                                <input type="text" style="width: 100%; height: 28px;" name="txtExpDate" id="txtExpDate"/>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-5 col-xs-5 control-label" for="cmbDepartment">Department:</label>
                            <div class="col-md-6">
                                <input type="text" style="width: 100%; height: 28px;" name="cmbDepartment" id="cmbDepartment"/>
                            </div>
                        </div>

                    </div>
                </div>
                <div class="col-md-4 col-xs-4">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label class="col-md-5 col-xs-5 control-label" for="cmbSetNo">Set No:</label>
                            <div class="col-md-6">
                                <input type="text" style="width: 100%; height: 28px;" name="cmbSetNo" id="cmbSetNo"/>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-5 col-xs-5 control-label" for="cmbCottonType">Cotton Type:</label>
                            <div class="col-md-6 col-xs-6">
                                <input type="text" style="width: 100%; height: 28px;" name="cmbCottonType" id="cmbCottonType"/>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-5 col-xs-5 control-label" for="txtRemarks">Remarks:</label>
                            <div class="col-md-6 col-xs-6">
                                <input type="text" class="form-control" style="width: 100%; height: 28px;" name="txtRemarks" id="txtRemarks"/>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-5 col-xs-5 control-label" for="txtTotalNoOfBag">Total No Of Bag:</label>
                            <div class="col-md-6">
                                <input type="text" style="width: 100%; height: 28px;" name="txtTotalNoOfBag" id="txtTotalNoOfBag"/>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-5 col-xs-5 control-label" for="cmbGroupName">Group Name:</label>
                            <div class="col-md-6 col-xs-6">
                                <input type="text" style="width: 100%; height: 28px;" name="cmbGroupName" id="cmbGroupName" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="spacer5"></div>
    <div class="col-md-12 col-xs-12">
        <ul class="list-group ">
            <li class="list-group-item centerAlign">
                <button id="btnAddToList" class="btn btn-success" type="button"><span class="glyphicon glyphicon-floppy-disk"></span> AddToList</button>
                <button id="btnUpdateMrrDetails" class="btn btn-success displayNone" type="button"><span class="glyphicon glyphicon-download-alt"></span> Update List</button>
                <button id="btnClearMrrDetails" class="btn btn-info" type="button"><span class="glyphicon glyphicon-repeat"></span> Clear</button>
                <button id="btnCloseMrrDetails" class="btn btn-danger" type="button"><span class="glyphicon glyphicon-remove"></span> Close</button>
            </li>
        </ul>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <label class="col-md-12 col-xs-12 control-label centerAlign" id="lblMessage"></label>
    </div>
</div>

